/* components/match-card-small/match.wxss */
.match-card {
  display: inline-block;
  margin: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.4);
  padding: 20rpx 20rpx;
  width: 350rpx;
}

.name {
  display: block;
  font-size: small;
  color: #666;
  text-align: center;
}

.info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.team {
  display: flex;
  flex-direction: column;
  font-size: small;
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.middle {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
}

.score {
  font-size: small;
}

.penalty {
  font-size: x-small;
}

.time {
  display: block;
  text-align: center;
  color: #666;
  font-size: small;
}