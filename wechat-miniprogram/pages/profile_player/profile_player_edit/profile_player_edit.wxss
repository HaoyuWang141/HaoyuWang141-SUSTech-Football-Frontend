.section{
  display: flex;
  border-bottom: 1px solid rgb(236, 235, 235);
  line-height: 130rpx;
}

.section0{
  display: flex;
  border-bottom: 1px solid rgb(236, 235, 235);
  line-height: 200rpx;
}

.edit{
  flex-grow: 0;
  display: flex;
  text-align: end;
  color: #99949d;
  position: relative;
  align-items: center;
}

