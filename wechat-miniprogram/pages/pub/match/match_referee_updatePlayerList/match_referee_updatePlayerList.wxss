.button-update {
  padding: 10rpx 40rpx;
  color: white;
  background-color: #ed6c00;
  font-weight: bold;
  border-radius: 20rpx;
}

/* 球员表格相关 */
.grid-container {
  margin: 20rpx 0;
  display: grid;
  grid-template-columns: 1fr repeat(3, 2fr);
  gap: 10rpx 0;
  justify-items: center;
  align-items: center;
}

/* 球员表格相关 */
.grid-header {
  width: 100%;
  height: 100%;
  font-weight: bold;
}

/* 球员表格相关 */
.grid-item {
  padding: 0 0;
  text-align: center;
  font-size: smaller;
}

/* 球员表格相关 */
.player-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

/* 选择 */
.icon {
  width: 50rpx;
  height: 50rpx;
}