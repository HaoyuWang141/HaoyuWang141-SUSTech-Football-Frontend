.user-list {
  margin-top: 20px;
}

.user-item {
  display: flex;
  justify-content: space-between;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 10px;
}

.username-container {
  width: calc(100vw - 450rpx);
  min-width: calc(100vw - 450rpx);
  max-width: calc(100vw - 450rpx);
  overflow: hidden;
  text-overflow: ellipsis;
}

.button-container {
  display: flex;
  width: 350rpx;
  max-width: 350rpx;
  overflow: hidden;
}

.button-check,
.button-update,
.button-delete {
  color: #ffffff;
  border-radius: 20%;
  cursor: pointer;
  width: 70rpx;
  padding: 10rpx 15rpx;
  margin: 0 10rpx;
}

.button-check {
  background-color: #ed6c00;
}

.button-update {
  background-color: #1890ff;
}

.button-delete {
  background-color: #ff4d4f;
}

modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.1);
}

.modal-content {
  background-color: #fff;
}

input {
  display: block;
  width: 90%;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}
