/* login.wxss */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: 200rpx;
}

.login-form {
  width: 100%;
  max-width: 80%;
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  color: #333;
}

.input {
  width: 90%;
  padding: 10rpx;
  border: 4rpx solid #ddd;
  border-radius: 5rpx;
}
