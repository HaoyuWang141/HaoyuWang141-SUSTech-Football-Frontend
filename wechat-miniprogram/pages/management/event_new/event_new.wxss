/* pages/management/event_new/event_new.wxss */
.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc; /* Light grey border */
  background-color: white; /* Light grey background */
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); /* 卡片阴影 */
  margin-bottom: 20rpx;
  margin: 10rpx; /* 外边距，根据需要调整 */
  width: 90%;
}

.block-space {
  border-bottom: 1px solid rgb(202, 202, 202);
  margin-bottom: 5%;
}

.title-container {
  padding: 40rpx 10rpx; /* 卡片内边距 */
  display: flex; /* 使用Flex布局 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.image {
  flex: 0 0 auto;
  width: 120rpx;
  height: 120rpx;
}

.text-container {
  flex: 1;
  display: block;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.text {
  font-size: medium;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
  flex-grow: 1;
}

.discription-container {
  background-color: #ffffff; /* 卡片背景色 */
  margin: 10rpx; /* 外边距，根据需要调整 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
  display: block;
}

.description-content {
  padding: 3%;
}

.description {
  font-size: small;
  width: 100%; /* 调整宽度 */
  height: 80px; /* 调整高度 */
  resize: none; /* 禁止用户手动调整文本区域大小 */
  overflow: auto; /* 当内容超出时显示滚动条 */
}

.confirm-btn{
  border: none; /* 去除按钮边框 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #ed6c00; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
  font-size: medium;
  max-width: 50%;
  margin-top: 5%;
  margin-bottom: 5%;
}

.eventType-container {
  margin-bottom: 3%;
}

.addStage-tag {
  padding: 10rpx 40rpx;
  color: white;
  background-color: #ed6c00;
  font-weight: bold;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.stage-container {
  margin: auto;
  margin-bottom: 3%;
}

.select-tag {
  margin-left: 10%;
  margin-bottom: 3%;
  margin-top: 3%;
}

.prompt {
  color: rgb(145, 143, 143);
  font-size: small;
}

.hint {
  margin-left: 3%;
  margin-bottom: 3%;
  margin-top: 3%;
  font-size: small;
  color: red;
}
