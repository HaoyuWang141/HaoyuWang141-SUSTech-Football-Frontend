.search-container .icon {
  width: 40rpx;
  height: 60rpx;
  vertical-align: middle;
}

.no-results-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh; /* 设置高度为视窗的100% */
}
.no-results-container .image-container {
  width: 100px; /* 图片容器的宽度 */
  height: 100px; /* 图片容器的高度 */
}
.no-results-container .image-container image {
  width: 100%; /* 图片宽度占满容器 */
  height: 100%; /* 图片高度占满容器 */
}
.no-results-container .text {
  font-size: 16px; /* 文字大小 */
  color: #999; /* 文字颜色 */
  margin-top: 10px; /* 上边距 */
}

.expand-button {
  width: 20px;
  height: 20px;
}
.more-button {
  width: 26px;
  height: 26px;
}


