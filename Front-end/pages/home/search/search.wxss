.search-container {
  display: flex;
  align-items: center;
  padding: 10rpx 50rpx;
  margin: 20rpx 10rpx;
  border: 4rpx solid rgb(237, 108, 0);
  border-radius: 20rpx;
  background-color: #f9f9f9;
  box-shadow: 0 -10rpx 60rpx rgba(237, 108, 0, 0.8);
  height: 100rpx;
}
.search-container .search-input {
    flex: 1; /* 让搜索框占据剩余空间 */
    height: 100%; /* 让搜索框与容器高度一致 */
}
.search-container .search-button {
  height: 80%; /* 让按钮与容器高度一致 */
  width: 20%;
  font-size: small;
  font-weight: normal;
  color: white;
  background-color: rgb(237, 108, 0);
  margin-left: 10rpx; /* 添加左侧间距，使搜索框和按钮之间有一定的间距 */
  padding: 0 10rpx; /* 设置按钮的左右内边距 */
  line-height: 80rpx; /* 设置按钮的行高，使文本垂直居中 */
}
