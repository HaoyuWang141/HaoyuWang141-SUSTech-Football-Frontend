/* 头部 */
.container1 {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.container2 {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background-color: #fff;
  width: 100%;
}

.container3 {
  width: 200rpx;
  /* 头像大小 */
  height: 200rpx;
  margin-top: -100rpx;
  /* 将头像向上移动其一半的高度 */
  overflow: hidden;
  /* 隐藏超出部分 */
  border-radius: 50%;
  /* 圆形 */
  background-color: white;
  /* 背景色 */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
  /* 可选：添加阴影以增强立体感 */
  margin-left: 50rpx;
}

.avatar {
  width: 200rpx;
  /* 头像大小 */
  height: 200rpx;
}

.container4 {
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  padding-top: 20rpx;
  padding-bottom: 50rpx;
}

.name {
  font-size: x-large;
  font-weight: bold;
}

.id {
  font-size: normal;
  color: #666;
}


.info-section {
  width: 100%;
  margin-left: 20rpx;
}

.info-section text {
  display: block;
  margin-bottom: 10rpx;
  font-size: small;
}