/* pages/pub/team/team.wxss */

.section-header {
  text-align: center;
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
}

.tab {
  flex-grow: 1;
  text-align: center;
  padding: 10px;
  color: #333;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
}

.tab-content {
  margin-top: 0;
  padding: 0;
}

/* 激活状态的tab样式 */
.active {
  color: rgb(237, 108, 0);
  border-bottom: 2px solid rgb(237, 108, 0);
}

/* Block */
/* Styles for the container */
.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc;
  /* Light grey border */
  background-color: white;
  /* Light grey background */
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

/* Styles for the top section */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  /* Adds some space between the top and the main content */
}

/* Styles for the title */
.block-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  /* Dark grey color for the text */
}

/* Optional: If you want the "More" text but it's empty in the example */
.block-more {
  padding: 10rpx 0;
  font-size: 14px;
  color: #666;
  /* Medium grey color */
}

/* Styles for the main content area */
.block-main {
  font-size: 14px;
  color: #666;
  /* Medium grey color for the text */
  padding: 5px 0;
  /* Padding on top and bottom */
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr repeat(5, 2fr);
  gap: 1rpx 0;
  justify-items: center;
  align-items: center;
}

.grid-header {
  width: 100%;
  height: 100%;
  font-weight: bold;
}

.grid-item {
  padding: 0 0;
  text-align: center;
  font-size: smaller;
}

.player-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.buttons {
  margin: 10rpx 20rpx;
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: -120rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}