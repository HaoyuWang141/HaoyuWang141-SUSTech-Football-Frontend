/* pages/pub/team/team.wxss */

.section-header {
  text-align: center;
  background-color: white;
}

.buttons {
  margin: 10rpx 20rpx;
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: -120rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
}

.tab {
  flex-grow: 1;
  text-align: center;
  padding: 10px;
  color: #333;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
}

.tab-content {
  margin-top: 0;
  padding: 0;
}

/* 激活状态的tab样式 */
.active {
  color: rgb(237, 108, 0);
  border-bottom: 2px solid rgb(237, 108, 0);
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr repeat(5, 2fr);
  gap: 1rpx 0;
  justify-items: center;
  align-items: center;
}

.grid-header {
  width: 100%;
  height: 100%;
  font-weight: bold;
}

.grid-item {
  padding: 0 0;
  text-align: center;
  font-size: smaller;
}

.player-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
