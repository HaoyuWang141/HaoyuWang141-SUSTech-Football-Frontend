/* pages/pub/team/team.wxss */

.section-header {
  text-align: center;
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
}

/* more-bar */
.more-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx; /* 调整容器的高度 */
}
.more-bar .more-label {
  height: 60rpx;
  width: 200rpx;
}
.more-bar .more-button {
  height: 60rpx;
  width: 120rpx;
  font-size: 40%; /* 设置按钮文本的大小 */
  margin-left: 390rpx; /* 添加左侧间距，使搜索框和按钮之间有一定的间距 */
  padding: 0 10rpx; /* 设置按钮的左右内边距 */
  line-height: 65rpx; /* 设置按钮的行高，使文本垂直居中 */
}