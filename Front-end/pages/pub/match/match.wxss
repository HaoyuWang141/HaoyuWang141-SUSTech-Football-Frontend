/* pages/pub/match/match.wxss */

.section-header {
  text-align: center;
}

.buttons {
  margin: 10rpx 20rpx;
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: -120rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
}

.tab {
  flex-grow: 1;
  text-align: center;
  padding: 10px;
  color: #333;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
}

.tab-content {
  margin-top: 0;
  padding-bottom: 10rpx;
}

/* 激活状态的tab样式 */
.active {
  color: rgb(237, 108, 0);
  border-bottom: 2px solid rgb(237, 108, 0);
}


/* 直播或回放按钮的样式 */
.videoOrLive {
  background-color: rgb(237, 108, 0);
  color: white;
  font-weight: normal;
  font-size: medium;
  padding: 20rpx;
  margin-bottom: 20rpx;
}



.button-update {
  padding: 10rpx 40rpx;
  color: white;
  background-color: #ed6c00;
  font-weight: bold;
  border-radius: 20rpx;
}

