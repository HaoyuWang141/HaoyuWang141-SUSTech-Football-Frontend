/* pages/management/invite/invite.wxss */
.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

/* Styles for the top section */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  /* Adds some space between the top and the main content */
}

/* Styles for the title */
.block-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  /* Dark grey color for the text */
}

/* Optional: If you want the "More" text but it's empty in the example */
.block-more {
  padding: 10rpx 0;
  font-size: 14px;
  color: #666;
  /* Medium grey color */
}

/* Styles for the main content area */
.block-main {
  font-size: 14px;
  color: #666;
  /* Medium grey color for the text */
  padding: 5px 0;
  /* Padding on top and bottom */
}