/* pages/management/match_edit/match_edit.wxss */
.section-header {
  text-align: center;
}

.motto {
  width: 80%;
  height: 200rpx;
}

.match-card-container {
  margin-top: 10rpx;
  text-align: center;
}

.match-card {
  display: inline-block;
  margin: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.4);
  padding: 20rpx 20rpx;
  width: 90%;
}

.name {
  display: block;
  font-size: larger;
  color: #666;
  text-align: center;
}

.info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.team {
  display: flex;
  flex-direction: column;
  font-size: small;
}

.icon {
  width: 150rpx;
  height: 150rpx;
}

.middle {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
}

.score {
  font-size: larger;
}

.penalty {
  font-size: x-small;
}

.time {
  display: block;
  text-align: center;
  color: #666;
  font-size: larger;
}

.changeInfo-container {
  margin: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.4);
  padding: 20rpx;
  width: 90%;
}

.btn-container {
  margin-left: 2%;
  display: flex; /* 将按钮放置在同一行 */
  justify-content: space-between; /* 让按钮分别靠左和靠右 */
  margin-top: 20px; /* 上边距 */
  width: 95%;
}

.confirm-btn{
  padding: 10px 20px; /* 按钮内边距 */
  border: none; /* 去除按钮边框 */
  border-radius: 5px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #eb903a; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
}

.delete-btn {
  padding: 10px 20px; /* 按钮内边距 */
  border: none; /* 去除按钮边框 */
  border-radius: 5px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #f44336; /* 取消比赛按钮背景色 */
  color: white; /* 文字颜色 */
}

.confirm-btn:hover{
  background-color: #f3ae6d; /* 鼠标悬停时背景色变暗 */
}

.delete-btn:hover {
  background-color: rgb(226, 84, 84); /* 鼠标悬停时背景色变暗 */
}

