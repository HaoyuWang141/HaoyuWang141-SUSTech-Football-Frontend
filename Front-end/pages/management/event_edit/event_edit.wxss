/* pages/management/event_edit/event_edit.wxss */
.title-container {
  background-color: #ffffff; /* 卡片背景色 */
  border-radius:30rpx; /* 卡片圆角 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); /* 卡片阴影 */
  padding: 40rpx 20rpx; /* 卡片内边距 */
  margin: 10rpx; /* 外边距，根据需要调整 */
  display: flex; /* 使用Flex布局 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
  width: 90%;
}

.image {
  flex: 0 0 auto;
  width: 120rpx; /* 图片宽度 */
  height: 120rpx; /* 图片高度，根据实际图片调整 */
  margin-right: 30rpx; /* 与下方内容的间距 */
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.text-container {
  flex: 1;
  display: block;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.text {
  font-size: medium;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
  flex-grow: 1;
}

.name-edit {
  font-size: small;
  color: gray;
  display: inline-block; 
  border-bottom: 1px solid gray;
  margin-left: 3%;
  flex-shrink: 0;
}

.discription-container {
  background-color: #ffffff; /* 卡片背景色 */
  border-radius:30rpx; /* 卡片圆角 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); /* 卡片阴影 */
  padding: 40rpx 20rpx; /* 卡片内边距 */
  margin: 10rpx; /* 外边距，根据需要调整 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
  width: 90%;
  display: block;
}

.description-content {
  padding: 3%;
}

.description {
  font-size: small;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
}

.description-edit {
  display: inline-block;
  font-size: small;
  color: gray;
  border-bottom: 1px solid gray;
  margin-left: 3%;
}

.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc; /* Light grey border */
  background-color: white; /* Light grey background */
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); /* 卡片阴影 */
  margin-bottom: 20rpx;
  margin: 10rpx; /* 外边距，根据需要调整 */
  width: 90%;
}

/* Styles for the top section */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px; /* Adds some space between the top and the main content */
}

/* Styles for the title */
.block-title {
  font-size: 16px;
  font-weight: bold;
  color: #333; /* Dark grey color for the text */
}

/* Optional: If you want the "More" text but it's empty in the example */
.block-more {
  padding: 10rpx 0;
  font-size: 14px;
  color: #666; /* Medium grey color */
}

/* Styles for the main content area */
.block-main {
  font-size: 14px;
  color: #666; /* Medium grey color for the text */
  padding: 5px 0; /* Padding on top and bottom */
}