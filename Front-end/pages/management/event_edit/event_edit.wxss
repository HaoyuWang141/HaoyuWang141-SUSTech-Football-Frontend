/* pages/management/event_edit/event_edit.wxss */
.block-space {
  border-bottom: 1px solid rgb(202, 202, 202);
  margin-bottom: 5%;
}

.title-container {
  padding: 30rpx 20rpx; /* 卡片内边距 */
  display: flex; /* 使用Flex布局 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
}

.image {
  flex: 0 0 auto;
  width: 120rpx;
  height: 120rpx;
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 0;
  flex-shrink: 0;
}

.text-container {
  flex: 1;
  display: block;
  flex-direction: row;
  align-items: center;
  margin-left: 50rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.text {
  font-size: medium;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
  flex-grow: 1;
}

.name-edit {
  font-size: small;
  color: gray;
  display: inline-block; 
  border-bottom: 1px solid gray;
  margin-left: 3%;
  flex-shrink: 0;
}

.discription-container {
  background-color: #ffffff; /* 卡片背景色 */
  padding: 40rpx 20rpx; /* 卡片内边距 */
  margin: 10rpx; /* 外边距，根据需要调整 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
  width: 90%;
  display: block;
}

.description-content {
  padding: 3%;
  margin-bottom: 5%;
}

.description {
  font-size: small;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
}

.description-edit {
  display: inline-block;
  font-size: small;
  color: gray;
  border-bottom: 1px solid gray;
  margin-left: 3%;
}

.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc; /* Light grey border */
  background-color: white; /* Light grey background */
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); /* 卡片阴影 */
  margin-bottom: 20rpx;
  margin: 10rpx; /* 外边距，根据需要调整 */
  width: 90%;
}

/* Styles for the top section */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px; /* Adds some space between the top and the main content */
}

/* Styles for the title */
.block-title {
  font-size: 16px;
  font-weight: bold;
  color: #333; /* Dark grey color for the text */
}

/* Optional: If you want the "More" text but it's empty in the example */
.block-more {
  padding: 10rpx 0;
  font-size: 14px;
  color: #666; /* Medium grey color */
}

/* Styles for the main content area */
.block-main {
  font-size: 14px;
  color: #666;
  padding: 5px 0;
  margin-bottom: 5%;
}

.btn-container {
  margin-left: 2%;
  display: flex; /* 将按钮放置在同一行 */
  justify-content: space-between; /* 让按钮分别靠左和靠右 */
  margin-top: 5%; /* 上边距 */
  margin-bottom: 5%;
  width: 95%;
}

.confirm-btn{
  border: none; /* 去除按钮边框 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #eb903a; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
  font-size: medium;
  max-width: 45%;
}

.delete-btn{
  border: none; /* 去除按钮边框 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #eb403a; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
  font-size: medium;
  max-width: 45%;
}

.eventType-container {
  margin-bottom: 3%;
}

.addStage-Tag{
  height: 60rpx;
  width: 200rpx;
  background-color: #eb903a;
  border-radius: 60rpx;
  text-align: center;
  align-items: center;
  color: white;
  font-size: medium;
  margin-bottom: 3%;
  margin-top: 3%;
  margin-right: 5%;
  margin-left: 5%;
}

.stage-container {
  margin: auto;
  margin-bottom: 3%;
}

.select-tag {
  margin-left: 10%;
  margin-bottom: 3%;
  margin-top: 3%;
}
