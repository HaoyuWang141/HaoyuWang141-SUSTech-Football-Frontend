<!-- pages/management/event_edit/event_teams/event_teams.wxml -->
<view class="container">
  <view style="width: 90%;">
    
    <view style="text-align: center;">管理的赛事球队</view>

    <scroll-view scroll-y enable-flex >

      <view>
        <team-card-big name="邀请球队" img="/assets/newplayer.png" bindtap="inviteTeam"></team-card-big>
      </view>

      
      <view class="team-card-container" >
        <block wx:for="{{teamList}}" wx:key="teamId">
          <team-card-big name="{{item.name}}" img="{{item.logo}}" number="{{item.playerCount}}" >
          <button class="delete-btn" bindtap="deleteTeam" data-id="{{item.teamId}}">删除</button>
          <button class="check-btn" bindtap="gotoTeamPage" data-id="{{item.teamId}}">查看</button>
          </team-card-big>
        </block>
      </view>

    </scroll-view>

  </view>
</view>