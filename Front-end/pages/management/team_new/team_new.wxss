/* pages/management/team_new/team_new.wxss */
.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  width: 90%;
}

.block-space {
  width: 95%;
  border-bottom: 1px solid rgb(202, 202, 202);
  margin-bottom: 5%;
}

.avatar-container {
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: space-around; /* 水平对齐，元素间距会自动填充 */
  margin: 10rpx;
  background-color: #fff;
  padding: 20rpx;
  width: 90%;
}

.teamname-container {
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: space-around; /* 水平对齐，元素间距会自动填充 */
  margin: 10rpx;
  background-color: #fff;
  padding: 20rpx;
  width: 90%;
}

.teamname {
  max-width: 70%;
}

.text {
  margin-right: auto;
}

.image {
  margin-left: auto;
  width: 120rpx;
  height: 120rpx;
}

.confirm-btn{
  border: none; /* 去除按钮边框 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #eb6c00; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
  font-size: medium;
  max-width: 50%;
}