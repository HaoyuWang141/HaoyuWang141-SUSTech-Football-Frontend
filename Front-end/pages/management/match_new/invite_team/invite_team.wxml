<!-- pages/management/match_new/invite_team/invite_team.wxml -->
<view class="block-container">
  <view class="block-top">
    <view class="block-title">选择你的球队</view>
    <view class="block-more" bindtap="gotoTeams" data-id="5">查看更多</view>
  </view>
  <view class="block-main">
    <scroll-view scroll-x enable-flex style="flex-direction: row; white-space: nowrap;">
      <team-card-small wx:for="{{managedTeamList}}" wx:key="index" name="{{item.name}}" img="{{item.logoUrl}}" number="" bindtap="gotoTeamPage" data-id="{{item.teamId}}"></team-card-small>
    </scroll-view>
  </view>
</view>

<view class="block-container">
  <view class="block-top">
    <view class="block-title">选择对手球队</view>
    <view class="block-more" bindtap="gotoTeams" data-id="5">查看更多</view>
  </view>
  <view class="block-main">
    <scroll-view scroll-y enable-flex>
      <team-card-small wx:for="{{allTeamList}}" wx:key="index" name="{{item.name}}" img="{{item.logoUrl}}" number="" bindtap="gotoTeamPage" data-id="{{item.teamId}}"></team-card-small>
    </scroll-view>
  </view>
</view>