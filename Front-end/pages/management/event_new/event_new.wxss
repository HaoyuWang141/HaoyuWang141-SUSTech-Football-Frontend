/* pages/management/event_new/event_new.wxss */
.block-container {
  padding: 10rpx;
  border: 1rpx solid #cccccc;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  width: 95%;
}

.block-space {
  border-bottom: 1px solid rgb(202, 202, 202);
  margin-bottom: 5%;
}

.title-container {
  padding: 40rpx 10rpx; /* 卡片内边距 */
  display: flex; /* 使用Flex布局 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.image {
  flex: 0 0 auto;
  width: 120rpx;
  height: 120rpx;
}

.text-container {
  flex: 1;
  display: block;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.text {
  font-size: medium;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
  flex-grow: 1;
}

.name-edit {
  font-size: small;
  color: gray;
  display: inline-block; 
  border-bottom: 1px solid gray;
  margin-left: 3%;
  flex-shrink: 0;
}

.discription-container {
  background-color: #ffffff; /* 卡片背景色 */
  margin: 10rpx; /* 外边距，根据需要调整 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
  display: block;
}

.description-content {
  padding: 3%;
  margin-bottom: 5%;
}

.description {
  font-size: small;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
}

.description-edit {
  display: inline-block;
  font-size: small;
  color: gray;
  border-bottom: 1px solid gray;
  margin-left: 3%;
}



.confirm-btn{
  border: none; /* 去除按钮边框 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #eb903a; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
  font-size: medium;
  max-width: 50%;
  margin-top: 5%;
  margin-bottom: 5%;
}

.eventType-container {
  margin-bottom: 3%;
}

.addStage-Tag{
  height: 60rpx;
  width: 200rpx;
  background-color: #eb903a;
  border-radius: 60rpx;
  text-align: center;
  align-items: center;
  color: white;
  font-size: medium;
  margin-bottom: 3%;
  margin-top: 3%;
  margin-right: 5%;
  margin-left: 5%;
}

.stage-container {
  margin: auto;
  margin-bottom: 3%;
}

.select-tag {
  margin-left: 10%;
  margin-bottom: 3%;
  margin-top: 3%;
}

.prompt {
  margin-left: 3%;
  color: rgb(145, 143, 143);
}

.hint {
  margin-left: 3%;
  margin-bottom: 3%;
  margin-top: 3%;
  font-size: small;
  color: red;
}
