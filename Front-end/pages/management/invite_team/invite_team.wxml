<!--pages/management/invite_team/invite_team.wxml-->
<view class="container">
  <view style="width: 100%;">
    <view class="block-container">
      <view class="block-top">
        <text class="block-title">球队列表</text>
        <text class="block-more">点击邀请球队</text>
      </view>
      <view class="block-main">
        <scroll-view scroll-y enable-flex>
          <team-card-small wx:for="{{allTeamList}}" wx:key="index" name="{{item.name}}" img="{{item.logoUrl}}" bindtap="invite" data-id="{{item.teamId}}">
          </team-card-small>
        </scroll-view>
      </view>
    </view>
  </view>
</view>