/* components/event-card/event.wxss */
.container {
  display: flex;
  flex-direction: row;
  margin: 50rpx 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border: 8rpx solid rgba(237, 108, 0, 0.3);
  box-shadow: 10rpx 0 40rpx rgba(237, 108, 0, 0.5);
  padding: 20rpx 0;
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.image {
  width: 100%;
  height: 100%;
}

.text-container {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.text {
  font-size: smaller;
}