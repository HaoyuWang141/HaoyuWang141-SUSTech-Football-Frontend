/* components/match-card-small/match.wxss */
.match-card {
  flex: 0 1 auto;
  display: inline-block;
  margin: 10rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.8);
  box-shadow: 0 4rpx 10rpx rgba(237, 108, 0, 0.8);
  padding: 20rpx 20rpx;
  width: 400rpx;
}

.name {
  display: block;
  font-size: small;
  color: #666;
  text-align: center;
}

.info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.team {
  flex: 0 1 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: small;
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.middle {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx auto;
  margin: 0 10rpx;
  border-radius: 10rpx;
}

.score {
  font-size: large;
  font-weight: bold;
  color: rgb(237, 108, 0);
}

.penalty {
  font-size: small;
  color: rgb(237, 108, 0);
}

.not-begin {
  font-weight: bold;
  color: rgb(237, 108, 0);
}

.time {
  display: block;
  text-align: center;
  color: #666;
  font-size: small;
  margin-bottom: 20rpx;
}