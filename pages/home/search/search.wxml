<view class="container">
  <view style="width: 90%;">

    <view class="search-container">
      <input class="search-input" type="text" placeholder="搜索" bindinput="bindInput" value="{{ searchText }}"></input>
      <button class="search-button" bindtap="search">搜索</button>
      <button class="filter-button" bindtap="filter">
        <image class="icon" src="/assets/filter.svg"></image>
      </button>
    </view>

    <view class="filter-container" wx:if="{{showFilter}}">
      <picker wx:if="true" class="picker-card" bindchange="bindTypeChange" range="{{filterTypes}}" mode="selector">
        <text>类型：</text>
        <text>{{type}}</text>
      </picker>
      <picker wx:if="false" class="picker-card" bindchange="bindSortingChange" range="{{filterSortings}}" mode="selector">
        <text>排序：</text>
        <text>{{sorting}}</text>
      </picker>
      <picker wx:if="false" class="picker-card" bindchange="bindFavorChange" range="{{filterFavors}}" mode="selector">
        <text>筛选：</text>
        <text>{{favor}}</text>
      </picker>
