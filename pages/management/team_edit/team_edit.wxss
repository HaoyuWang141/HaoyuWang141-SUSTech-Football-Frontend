/* pages/management/team_edit/team_edit.wxss */
.avatar-container {
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: space-around; /* 水平对齐，元素间距会自动填充 */
  margin: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.4);
  padding: 20rpx;
  width: 90%;
}

.teamname-container {
  margin: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.4);
  padding: 20rpx;
  width: 90%;
}

.teamname {
  font-size: medium;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
  flex-grow: 1;
  font-size: medium;
}

.name-edit {
  font-size: small;
  color: gray;
  display: inline-block; 
  border-bottom: 1px solid gray;
  margin-left: 3%;
  flex-shrink: 0;
}

.team-container {
  margin: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.4);
  padding: 20rpx;
  width: 90%;
}

.text {
  margin-right: auto;
}

.image {
  margin-left: auto;
  width: 120rpx;
  height: 120rpx;
}