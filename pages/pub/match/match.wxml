<view class="container">
  <view style="width: 90%;">

    <view class="title-card">
      <view class="header-container">
        <text class="header-text">{{event}}</text>
        <text class="header-text">{{time}}</text>
      </view>
      <view class="info-container">
        <view class="team">
          <image class="icon" src="{{icon1}}"></image>
          <text>{{team1}}</text>
        </view>
        <view class="middle">
          <block wx:if="{{hasBegun}}">
            <text class="group">{{group}}</text>
            <text class="score">{{score1}} - {{score2}}</text>
            <text class="penalty" wx:if="{{score1 === score2}}">(点球 {{penalty1}} - {{penalty2}})</text>
          </block>
          <text class="not-begin" wx:else>未开始</text>
        </view>
        <view class="team">
          <image class="icon" src="{{icon2}}"></image>
          <text>{{team2}}</text>
        </view>
      </view>
    </view>

    <view class="options-card" wx:if="{{hasBegun}}">
      <button>观看直播</button>
      <button>观看回放</button>
    </view>

    <view class="description-card">
      <text class="header-text">比赛描述</text>
      <text class="content-text">{{description}}</text>
    </view>

    <view class="event-card" wx:if="{{hasBegun}}">
      <view class="header-container">
        <text class="header-text">比赛事件</text>
      </view>
      <view class="event-chain">
      </view>
    </view>

  </view>
</view>