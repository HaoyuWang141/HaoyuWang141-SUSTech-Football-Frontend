/* pages/pub/match/match.wxss */
.section-header {
  text-align: center;
}

.motto {
  width: 80%;
  height: 200rpx;
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
}

.tab {
  flex-grow: 1;
  text-align: center;
  padding: 10px;
  color: #333;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
}

.tab-content {
  margin-top: 0;
  padding: 0;
}

/* 激活状态的tab样式 */
.active {
  color: rgb(237, 108, 0);
  border-bottom: 2px solid rgb(237, 108, 0);
}

/* 比赛主要信息部分 */
.match-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
  background-color: #fff;

}

.team {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  max-width: 300rpx;
}

.icon {
  width: 120rpx;
  height: 120rpx;
}

/* Block */
/* Styles for the container */
.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc;
  /* Light grey border */
  background-color: white;
  /* Light grey background */
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

/* Styles for the top section */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  /* Adds some space between the top and the main content */
}

/* Styles for the title */
.block-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  /* Dark grey color for the text */
}

/* Optional: If you want the "More" text but it's empty in the example */
.block-more {
  padding: 10rpx 0;
  font-size: 14px;
  color: #666;
  /* Medium grey color */
}

/* Styles for the main content area */
.block-main {
  font-size: 14px;
  color: #666;
  /* Medium grey color for the text */
  padding: 5px 0;
  /* Padding on top and bottom */
}

/* 直播或回放按钮的样式 */
.videoOrLive {
  background-color: rgb(237, 108, 0);
  color: white;
  font-weight: normal;
  font-size: medium;
  padding: 20rpx;
  margin-bottom: 20rpx;
}